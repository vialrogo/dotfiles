# This tmux statusbar config was created by tmuxline.vim
# on Seg, 18 Abr 2016

# statusbar
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g status-right-length "100"
set-option -g status-style fg=colour136,bg=default #yellow and base2

set -g status-left "#[fg=yellow,bg=white] #S #[fg=white,bg=default,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=white,bg=default,nobold,nounderscore,noitalics]#[fg=yellow,bg=white] %Y-%m-%d  %H:%M #[fg=yellow,bg=white,nobold,nounderscore,noitalics]#[fg=yellow,bg=white] #h "

# window
setw -g window-status-separator ""
set-window-option -g window-status-style fg=brightyellow,bg=default #base0 and default
set-window-option -g window-status-current-style fg=brightred,bg=default #orange and default

setw -g window-status-format "#[fg=brightred,bg=default] #I #[fg=brightred,bg=default] #W "
setw -g window-status-current-format "#[fg=brightred,bg=default] #I #[fg=brightred,bg=default] #W #[fg=brightred,bg=default,nobold,nounderscore,noitalics]"

# pane border
set-option -g pane-border-style fg=white #base2
set-option -g pane-active-border-style fg=brightcyan #base1


